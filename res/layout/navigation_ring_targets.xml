<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:prvandroid="http://schemas.android.com/apk/prv/res/android">
    <TextView
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"
        android:background="@android:color/holo_blue_light"
        android:padding="4.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8.0dip"
        android:text="@string/lockscreen_target_info" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.4" />
    <com.android.internal.widget.multiwaveview.GlowPadView
        android:gravity="top"
        android:orientation="horizontal"
        android:id="@id/navring_target"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.6"
        android:layout_alignParentBottom="true"
        prvandroid:innerRadius="@android:dimen/action_bar_icon_vertical_padding"
        android:contentDescription="@android:string/ext_media_unsupported_notification_message"
        prvandroid:targetDescriptions="@android:array/config_angleAllowList"
        prvandroid:directionDescriptions="@android:array/config_allowedSecureInstantAppSettings" />
</LinearLayout>