<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    android:title="@string/system_interface_title"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.androie.settings">
    <PreferenceScreen
        android:title="@string/status_bar_title"
        android:key="status_bar"
        android:fragment="com.androie.settings.cyanogenmod.StatusBar" />
    <PreferenceScreen
        android:title="@string/quick_settings_panel_title"
        android:key="quick_settings_panel"
        android:fragment="com.androie.settings.cyanogenmod.QuickSettings" />
    <PreferenceScreen
        android:title="@string/notification_drawer_title"
        android:key="notification_drawer"
        android:fragment="com.androie.settings.cyanogenmod.NotificationDrawer" />
    <ListPreference
        android:persistent="false"
        android:entries="@array/expanded_desktop_entries"
        android:title="@string/power_menu_expanded_desktop"
        android:key="expanded_desktop"
        android:entryValues="@array/expanded_desktop_values" />
    <CheckBoxPreference
        android:persistent="false"
        android:title="@string/power_menu_expanded_desktop"
        android:key="expanded_desktop_no_navbar" />
    <PreferenceCategory
        android:title="@string/navigation_bar_category"
        android:key="navigation_bar">
        <PreferenceScreen
            android:title="@string/navigation_bar_title"
            android:key="navigation_bar"
            android:fragment="com.androie.settings.cyanogenmod.NavBar" />
        <PreferenceScreen
            android:title="@string/navigation_ring_title"
            android:key="navigation_ring"
            android:fragment="com.androie.settings.cyanogenmod.NavRing" />
        <PreferenceScreen
            android:title="@string/pie_control_title"
            android:key="pie_control"
            android:fragment="com.androie.settings.cyanogenmod.PieControl" />
    </PreferenceCategory>
    <Preference
        android:key="touch_screen_gesture_settings">
        <intent
            android:targetPackage="com.cyanogenmod.settings.device"
            android:action="com.cyanogenmod.action.LAUNCH_TOUCHSCREEN_GESTURE_SETTINGS"
            android:targetClass="com.cyanogenmod.settings.device.TouchscreenGestureSettings" />
    </Preference>
</PreferenceScreen>